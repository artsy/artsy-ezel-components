//
// Styles for loading spinners of all varieties.
//

@keyframes spin
  100%
    transform rotate(360deg)

spinner(width=25px, height=6px, color=black)
  background color
  width width
  height height
  position absolute
  top "calc(50% - %s / 2)" % height
  left "calc(50% - %s / 2)" % width
  animation spin 1s infinite linear

.loading-spinner
  spinner(25px, 6px)

.loading-spinner-small
  spinner(20px, 4px)

.loading-spinner-white
  @extends .loading-spinner
  background white

.loading-spinner-small-white
  @extends .loading-spinner-small
  background white

@keyframes fade
  0%
    opacity 0
  50%
    opacity 1
  100%
    opacity 0

.loading-ellipsis > span
  letter-spacing 2px
  for i in 1 2 3
    &:nth-child({i})
      animation fade 1s infinite
      animation-delay i * 0.2s
